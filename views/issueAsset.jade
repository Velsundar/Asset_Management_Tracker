doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Issue Asset
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    div.container
      h1 Issue Asset
      form(method="post", action="/issueAsset")
        div.form-group
          label(for="employeeName") Employee Name:
          input#employeeName.form-control(type="text", name="employeeName", required)
        div.form-group
          label(for="assetId") Asset:
          select#assetId.form-control(name="assetId", required)
            each asset in assets
              option(value=asset.id)= asset.name
        button.btn.btn-primary(type="submit") Issue Asset
