doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Asset Category Master
    link(rel="stylesheet", href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    div.container
      h1 Asset Category Master
      a.btn.btn-primary(href="/addAssetCategory", role="button") Add Category
      table.table#assetCategoriesTable
        thead
          tr
            th ID
            th Name
            th Actions
        tbody
          each assetCategory in assetCategories
            tr
              td= assetCategory.id
              td= assetCategory.name
              td
                a.btn.btn-danger.btn-delete(href=`/assetCategories/${assetCategory.id}`, role="button") Delete
